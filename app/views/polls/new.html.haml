-# frozen_string_literal: true
.container
  %h1.text-center Créer un vote

  = simple_form_for @poll do |f|
    = f.input :title
    = f.input :scheduled_at, as: :string, input_html: { data: { controller: "flatpickr", flatpickr_date_format: "d/m/Y H:i", flatpickr_min_date: Time.current, flatpickr_min_time: l(Time.current, format: :hours) } }
    = f.input :due_at, as: :string, input_html: { data: { controller: "flatpickr", flatpickr_date_format: "d/m/Y H:i", flatpickr_min_date: Time.current, flatpickr_min_time: l(Time.current, format: :hours) } }
    = f.submit 'Créer le vote', class: 'btn btn-primary'